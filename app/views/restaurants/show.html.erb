<div class="show_container">
    <div class="restau_image"></div>
    <div class="restau_info">
      <h1><strong><%= @restaurant.name %></strong></h1>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.contact_number %></p>
    </div>
    <div class="buttons"
        >
      <button class="navigate" type="button">Navigate</button>
      <%= link_to "add favorites", toggle_favorite_restaurant_path(@restaurant), remote:true, method: :post%>
    </div>
    <div data-controller="hello"
         data-hello-target="star">
      <i class="fa-solid fa-star fs-1"
         data-action="click->hello#favourite">
      </i>
    </div>
</div>
