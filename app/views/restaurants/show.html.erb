<div class="container">
  <div class="row justify-content-center">


    <div class="col-sm-12 col-lg-4" style= "background-image: url(https://img.freepik.com/vecteurs-libre/memphis-fond_53876-85419.jpg?w=740&t=st=1677265783~exp=1677266383~hmac=60ba9e3f2cd5828b51d44b4a909294d9bb63e578337d917ba806eb17acbc380e);">
      <h1 class="text-center text-dark mt-3" id="restaurant-title">
        <%= @restaurant.name %>
        <% if @rating%>
          <% action = @rating.round%>
          <% case action  %>
            <% when 1  %>
              <p>⭐️</p>
            <% when 2  %>
              <p>⭐️⭐️</p>
            <% when 3  %>
              <p>⭐️⭐️⭐️</p>
            <% when 4  %>
              <p>⭐️⭐️⭐️⭐</p>
            <% when 5  %>
              <p>⭐️⭐️⭐️⭐️⭐️</p>
            <% end %>
        <% end %>
      </h1>

      <%= render "restaurants/carousel", restaurant: @restaurant %>
      <div class="restau-card">
      <div class="d-inline mt-3 ms-2">
        <% if user_signed_in? && current_user.favorited?(@restaurant) == false  %>
          <%= link_to"Add to Favorites ⭐️",restaurant_favorites_path(@restaurant), class:"btn btn-dark btn-lg rounded-4" %>
        <% end %>
        <button class="btn btn-dark rounded-4 btn-lg" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Reviews
        </button>
        <div class="collapse rounded-3" id="collapseExample">
          <div class="card card-body mt-3">
            <%= render "favorites/review_list", reviews: @reviews, review: @review%>
          </div>
        </div>

      </div>

      <div class="card mt-3 border-0 rounded-5 pt-3 bg-info " style="width:auto">
        <div class="card-body">
          <div class="shadow-none p-1 mb-3 bg-light rounded-5 p-3"style="font-size: 20px;"> <i class="fa-solid fa-location-dot text-black" ></i><%= @restaurant.address %> </div>
          <div class="shadow-none p-1 mb-3 bg-light rounded-5 p-3"style="font-size: 20px;"><i class="fa-solid fa-phone text-black"></i><%= @restaurant.contact_number%></div>
        </div>
      </div>
      <div class="shadow-sm p-3 mt-3 bg-white rounded-5 text-dark">
        <%= render "favorites/review_form", restaurant: @restaurant, review: @review %>
      </div>

      </div>
    </div>
  </div>

</div>
