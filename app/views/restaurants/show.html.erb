<div class="show_cont">
  <div class="restau_image">
    <% @restaurant.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="fav">
      <% if user_signed_in? && current_user.favorited?(@restaurant) %>
      <% elsif user_signed_in? && current_user.favorited?(@restaurant) == false  %>
        <%# <%= link_to "add to favorite", restaurant_favorites_path(@restaurant), class:"btn btn-primary" %>
        <%= link_to restaurant_favorites_path(@restaurant) do %>
          <button class="heart"><i class="fa-solid fa-heart" style="color: white"> </i></i></button>
        <% end %>
      <% else %>
        <p> Sign up to save your favourite restaurants</p>
      <% end %>
    </div>
  </div>

  <div class="restau_info">
    <h1><strong><%= @restaurant.name %></strong></h1>
    <p><i class="fa-solid fa-location-dot"></i><%= @restaurant.address %></p>
    <p><i class="fa-solid fa-phone"></i><%= @restaurant.contact_number %></p>
  </div>

  <div class="Add_review_container">
    <div class="review_btn">
      <button class="btn_rev btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      <p>Add a Review<i class="fa-regular fa-pen-to-square" style="color:white"></i></p>
      </button>
    </div>

    <div class="collapse" id="collapseExample">
      <div class="card card-body border-0 shadow-sm p-3 mb-5 bg-body rounded">
        <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, collection: (1..5).to_a, label:"Rate your experience", input_html: {data: {controller: "star-rating"}} %>
        <%= f.submit "Submit review", class: " btn btn-info" %>
        <% end %>
      </div>
    </div>
  <div class="btn_rev2_div">
    <p>
      <button class="btn_rev2 btn-btn primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
        Reviews <i class="fa-regular fa-star" style="color:#E1AF63"></i>
      </button>
    </p>
  </div>
  <div style="min-height: 5px;">
    <div class="collapse collapse-vertical" id="collapseWidthExample">
      <div class="card card-body" >
        <% @reviews.each do |review| %>
          <p><%= cl_image_tag review.user.photo.key, height: 40, width: 50  %><strong> &nbsp; <%= review.user.username %></strong></p>
          <p><%= review.comment%></p>
          <p> Rating: <%= r = review.rating %></p>
      <% end %>
      </div>
    </div>

</div>
<br>
<br>
<nav class="mobile-bottom-nav">
	<div class="mobile-bottom-nav__item mobile-bottom-nav__item--active">
		<div class="mobile-bottom-nav__item-content">
      <%= link_to root_path do %>
			  <i class="fa-solid fa-house" style="color:#E9BE78"></i>
      <% end %>
		</div>
	</div>

	<div class="mobile-bottom-nav__item">
		<div class="mobile-bottom-nav__item-content">
      <%= link_to restaurants_path(@restaurant) do %>
			  <i class="fa-solid fa-compass" style="color:#E9BE78"></i>
      <% end %>
		</div>
	</div>

	<div class="mobile-bottom-nav__item">
		<div class="mobile-bottom-nav__item-content">
      <%= link_to restaurant_favorites_path(@restaurant) do %>
			  <i class="fa-solid fa-heart" style="color:#E9BE78"></i>
      <% end %>
		</div>
	</div>

  <div class="mobile-bottom-nav__item">
		<div class="mobile-bottom-nav__item-content">
      <%= link_to tags_path(@restaurant) do %>
			  <i class="fa-solid fa-hashtag" style="color:#E9BE78"></i>
      <% end %>
		</div>
	</div>
</nav>
