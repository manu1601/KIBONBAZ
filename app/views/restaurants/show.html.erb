<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-4">
      <h1 class="text-center text-dark mt-3" id="restaurant-title">
        <%= @restaurant.name %>
        <% if @rating%>
          <% action = @rating.round%>
          <% case action  %>
            <% when 1  %>
              <sup>⭐️</sup>
            <% when 2  %>
              <sup>⭐️⭐️</sup>
            <% when 3  %>
              <sup>⭐️⭐️⭐️</sup>
            <% when 4  %>
              <sup>⭐️⭐️⭐️⭐</sup>
            <% when 5  %>
              <sup>⭐️⭐️⭐️⭐️⭐️</sup>
            <% end %>
        <% end %>
      </h1>
      <%= render "restaurants/carousel", restaurant: @restaurant %>
        <div class="">
          <button class="btn btn-primary mt-3 mb-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseExample-<%=@restaurant.id%>"
                  aria-expanded="false"
                  aria-controls="collapseExample">
            Write a review
          </button>
          <div class="collapse" id="collapseExample-<%=@restaurant.id%>">
            <div class="card card-body">
              <%= render "favorites/review_form", restaurant: @restaurant, review: @review %>
            </div>
          </div>
            <!-- working on write review front-end-->
        </div>
        </div>
        <div class="">
          <button class="btn btn-primary mb-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseExample"
                  aria-expanded="false"
                  aria-controls="collapseExample">
            Reviews
          </button>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
              <%= render "favorites/review_list", reviews: @reviews, review: @review%>
            </div>
          </div>
        </div>
        <div class="">
           <%= link_to"Direction",restaurants_path, class: "btn btn-primary mb-3" %>
        </div>
        <div class="">
          <% if user_signed_in? && current_user.favorited?(@restaurant) == false  %>
              <%= link_to restaurant_favorites_path(@restaurant) do%>
                <i class="fa-regular fa-star"style="color:orange"></i>
              <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
<div class="card" style="width:auto">
  <div class="card-body">
    <div class="position-absolute top-0 end-0">
          <% if user_signed_in? && current_user.favorited?(@restaurant) == false  %>
              <%= link_to restaurant_favorites_path(@restaurant) do%>
                <i class="fa-regular fa-star"style="color:orange"></i>
              <% end %>
          <% end %>
    </div>
   <p ><i class="fa-solid fa-location-dot text-black"></i><%= @restaurant.address %><p>
   <p><i class="fa-solid fa-phone text-black"></i><%= @restaurant.contact_number%></p>
   <div class="">
    <%= link_to"Direction",restaurants_path, class: "btn btn-primary mb-3" %>
   </div>

  </div>
</div>
