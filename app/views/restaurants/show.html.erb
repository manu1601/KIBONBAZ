<div class="show_container">
    <div class="restau_image"></div>
    <div class="restau_info">
      <h1><strong><%= @restaurant.name %></strong></h1>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.contact_number %></p>
    </div>
    <div data-controller="hello"
         data-hello-target="el"
         data-id= <%=current_user.favorited?(@restaurant)%>>
         <%= link_to (render "star"), toggle_favorite_restaurant_path(@restaurant), remote:true, method: :post%>
    </div>

</div>
