<div class="container">
  <div class="row justify-content-center">

    <div class="col-sm-12 col-lg-4">

          <h1 class="text-center fw-bolder mt-3"> Your favorites!</h1>
          <div class="shadow-lg p-3 mb-3 bg-info rounded-pill d-flex justify-content-center">
        <%= form_with url: favorites_path, method: :get, class: "d-flex, " do %>

          <%= text_field_tag :query,
            params[:query],
            class: "form-control, w-70, text-center, border-0",
            placeholder: "type Restaurant name"
          %>

          <button class="btn  rounded-pill me-2" type="submit"data-turbo= false><i class="fa-solid fa-magnifying-glass p-0 text-black "></i></button>
          <% end %>
        </div>

      <div class="favorite-card">
        <% @favorites.each do |favorite| %>
          <div class="card mt-3 border-0 rounded-5" style="width: 22rem;">
            <%@restaurant = Restaurant.find_by(id:favorite.favoritable_id)  %>
            <%= cl_image_tag @restaurant.photos[0].key, width: 350, height: 290, crop: :fill, class: "card-img-top rounded-4" %>
            <div id=card-body-show class="card-body">
              <div>
                <h2 class= "text-center"style= "font-family: 'Alfa Slab One', cursive;" ><%= link_to (@restaurant.name), restaurant_path(@restaurant), class: "btn btn-info rounded-pill " %></h2>
              </div>
                <div class="position-absolute top-0 end-0">
                  <%= link_to favorite_path(favorite), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, style: "text-decoration:none;" do %>
                    <i class="fa-solid fa-trash" style="color:red;"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
