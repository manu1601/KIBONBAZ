<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-4">
      <div class= "shadow-lg p-2 mt-3  mb-2 bg-info rounded-pill">
        <h1 class="text-center fw-bolder">#<%= @tag.name_tag %></h1>
      </div>
      <div class="shadow-lg p-3 mb-3 bg-info rounded-pill">
        <form class="d-flex">
          <input class="form-control me-2 rounded-pill border-0" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-dark rounded-pill" type="submit"><i class="fa-solid fa-magnifying-glass p-0 text-whitw "></i></button>
        </form>
      </div>
    </div>
  </div>
</div>
<% @suggestions.each do |suggestion| %>
  <div class="card bg-dark text-white border-0 mb-3 rounded-5">
    <%= cl_image_tag suggestion.restaurant.photos[0].key, height: 300, width: 400, crop: :fill, class:"rounded-5"%>
    <div class="card-img-overlay">
      <h5 class="card-title"><%= link_to (suggestion.restaurant.name), restaurant_path(suggestion.restaurant), class:"btn btn-info rounded-pill fw-bolder" %></h5>
      <% average = [] %>
      <% suggestion.restaurant.reviews.each do |review| %>
        <% rating = review.rating %>
        <% average.push(rating) %>
      <% end %>
      <div class="position-absolute top-0 end-0">
        <% sum = average.sum %>
        <% count = average.count %>
        <% unless average.empty? %>
        <p class="card-text text-black fw-bolder fs-6 text-center shadow-lg p-1 me-0 mt-3  bg-info rounded-5">
          <%= (sum/count)%> <sup>⭐️</sup>
        </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
