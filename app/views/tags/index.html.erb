<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-4">
    </div>
      <p><%= @tags.count %> tags </p>
      <hr>
      <% @tags.each do |tag| %>
        <%= link_to tag.name_tag, tag_path(tag), class: "btn btn-primary" %>
        <hr>
      <% end %>
  </div>
</div>
